{
    "name": "ts-api-boilerplate",
    "version": "1.0.0",
    "repository": "git@github.com:duranhumes/ts-api-boilerplate.git",
    "author": "Duran Humes <duranhumes@gmail.com>",
    "license": "MIT",
    "description": "",
    "main": "build/index.js",
    "scripts": {
        "test": "npx cross-env NODE_ENV=test npx jest --forceExit --runInBand --bail",
        "test:cov": "npx cross-env NODE_ENV=test npx jest --forceExit --runInBand --coverage --bail",
        "start": "npx cross-env DEBUG=api NODE_ENV=development npx nodemon --exec npx ts-node src/index.ts",
        "build": "npx rimraf build && npx cross-env npx tsc && node copy.js",
        "prod": "npx cross-env yarn build && npx cross-env NODE_ENV=production npx pm2 start ecosystem.config.js --env production",
        "docker": "docker-compose up -d --remove-orphans",
        "lint": "npx tslint --project tsconfig.json",
        "lint:fix": "npx tslint --project tsconfig.json --fix",
        "prettier": "npx prettier --write '**/*.{ts,js,json}'"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn test && yarn prettier && yarn lint:fix"
        }
    },
    "dependencies": {
        "argon2": "0.20.1",
        "bunyan": "2.0.2",
        "bunyan-express-serializer": "1.0.0",
        "bunyan-rotating-file-stream": "1.6.3",
        "class-validator": "0.9.1",
        "compression": "1.7.3",
        "connect-redis": "3.4.0",
        "cors": "2.8.5",
        "dotenv-safe": "6.1.0",
        "escape-html": "1.0.3",
        "express": "4.16.4",
        "express-session": "1.15.6",
        "express-validator": "5.3.1",
        "googleapis": "37.2.0",
        "helmet": "3.15.1",
        "hpp": "0.2.2",
        "jest": "24.1.0",
        "jsonwebtoken": "8.4.0",
        "nodemailer": "5.1.1",
        "nodemailer-mailgun-transport": "1.4.0",
        "nodemailer-stub": "1.0.1",
        "passport": "0.4.0",
        "passport-local": "1.0.0",
        "rate-limiter-flexible": "0.22.6",
        "redis": "2.8.0",
        "reflect-metadata": "0.1.13",
        "shelljs": "^0.8.3",
        "supertest": "3.4.2",
        "typeorm": "0.2.8",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "@types/bunyan": "1.8.5",
        "@types/compression": "0.0.36",
        "@types/connect-redis": "0.0.8",
        "@types/cors": "2.8.4",
        "@types/debug": "4.1.1",
        "@types/dotenv-safe": "5.0.3",
        "@types/escape-html": "0.0.20",
        "@types/expect": "1.20.4",
        "@types/express": "4.16.1",
        "@types/express-session": "1.15.12",
        "@types/helmet": "0.0.42",
        "@types/hpp": "0.2.1",
        "@types/jest": "24.0.6",
        "@types/jsonwebtoken": "8.3.0",
        "@types/morgan": "1.7.35",
        "@types/moxios": "0.4.8",
        "@types/node": "11.9.4",
        "@types/nodemailer": "4.6.6",
        "@types/passport": "1.0.0",
        "@types/passport-local": "1.0.33",
        "@types/redis": "2.8.10",
        "@types/shelljs": "^0.8.3",
        "@types/sqlstring": "^2.2.1",
        "@types/supertest": "2.0.7",
        "@types/uuid": "3.4.4",
        "cross-env": "5.2.0",
        "husky": "1.3.1",
        "morgan": "1.9.1",
        "mysql2": "1.6.5",
        "nodemon": "1.18.10",
        "pm2": "3.3.1",
        "prettier": "1.16.4",
        "ts-jest": "24.0.0",
        "ts-node": "8.0.2",
        "tslint": "5.12.1",
        "tslint-config-airbnb": "5.11.1",
        "tslint-config-prettier": "1.18.0",
        "typescript": "3.3.3"
    },
    "jest": {
        "verbose": true,
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/setupTests.ts"
        ],
        "testEnvironment": "node",
        "testRegex": "/__tests__/.*\\.(test|spec)\\.(js?|ts?)$",
        "moduleFileExtensions": [
            "js",
            "ts",
            "json"
        ]
    }
}
